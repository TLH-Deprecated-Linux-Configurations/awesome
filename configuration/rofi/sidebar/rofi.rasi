
configuration {
	font:                       	"Commodore 64 Rounded Bold 16";
    window-thumbnail:               true;
    threads:                        0;
    scroll-method:                  0;
}

* {
    transparent:                    #00000000;
    background:                     #22262d99;
    background-color:               #22262d99;
    background-entry:               #22262d99;
    background-alt:                 #22262d99;
    element-border-color:           #3c3f4c33;
    selected-border-color:          #4B5A7599;
    foreground:                     #F0F5FFff;
    
}

window {
	transparency:					"real";
	background: 					@background-color;
	x-offset: 	 					0px;
	height:		 					60%;
	width:		 					38%;
    border-radius:                  9px;
    border:                         2px 2px 2px 2px;
    border-color:                   @selected-border-color;
	orientation: 					vertical;
}

mainbox {
	background-color: 				@background-alt;
	spacing:  						0px;
	padding: 						5px;
	width:							300px;
	expand: 						true;
	spacing: 12px;
	children: 						[ inputbar, listview];
}

scrollbar {
	background-color: 				@background-alt;
	handle-width:					10px;
	margin: 						0px 0px 5px 0px;
	border-radius:  				9px;
}

listview {
	spacing: 						0px;
	dynamic:						true;
	cycle:   						true;
	scrollbar: 						true;
}

prompt {
    enabled:                        false;
}

button {
    action:                         "ok";
    str:                            "ï€Ž ";
    font:                           "FantasqueSansMono Nerd Font 16";
    expand:                         false;
    text-color:                     @foreground;
    background-color:               @transparent;
    vertical-align:                 0.5;
    horizontal-align:               0.5;
}


entry {
	font:            				"Commodore 64 Rounded Bold 16";
	background-color:               @transparent;
    padding:                        8px 8px 8px 8px;
	placeholder-color:          	@foreground;
	placeholder:                	"Search...";
	blink:		                    true;
	expand:         				true;
	text-color:						@foreground;
	vertical-align: 				0.5;
}

entry-wrapper {
    orientation:                    horizontal;
    vertical-align:                 0.5;
    spacing:                        4px;
    background-color:               @background;
    children:                       [ button, entry ];
}

inputbar {
	padding:                        14px;
	margin:							10px 10px 14px 10px;
    border:                         2px 2px 2px 2px;
    border-color:                   @selected-border-color;
    text-color:                     @foreground;
    expand:                         false;
    border-radius:                  9px;
    children:                       [ entry-wrapper ];
}

element {
	margin:							0px 12px 0px 12px;
    background-color:               @background-alt;
    text-color:                     @foreground;
    orientation:                    horizontal;
    border-radius:                  9px;
    padding:                        10px 12px 10px 12px;

    border:                         0px 0px 2px 0px;
    border-color:                   @element-border-color;
    
}



element-text {
	font:                      	  "Commodore 64 Rounded Bold 14";
	expand:                        true;
	horizontal-align:              	0.5;
   text-color:                     @foreground;
	vertical-align: 				0.5;
}


element selected {
    background-color:               @background-alt;
    text-color:                     @foreground;
    border:                         3px 3px 3px 3px;
    border-color:                   @selected-border-color;
}
